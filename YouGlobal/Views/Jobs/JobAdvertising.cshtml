@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="tagline-text">
            </div>
        </div>
    </div>
    <div class="row secondary-nav ">
        <div class="row secondary-nav secondary-nav-margin">
            <div class="col-lg-4 col-md-4"><i><img src="~/Content/images/04.png" alt="Job seekers"></i><a href="@Url.Action("LookingforStaff", "Staff")" class="button btn-jobseeker button--antiman button--inverted button--border-thin button--text-thick button--size-m active">Looking for Staff?</a></div>
            <div class="col-lg-4 col-md-4"><i><img src="~/Content/images/04.png" alt="Job seekers"></i><a href="@Url.Action("JoinUsHtml", "Join")" class="button btn-uploadcv button--antiman button--inverted button--border-thin button--text-thick button--size-m">Why Not Join Us ?</a></div>
            @if (Session["username"] != null && !string.IsNullOrEmpty(Session["username"].ToString()))
            {
                <div class="col-lg-4 col-md-4"><i><img src="~/Content/images/04.png" alt="Job seekers"></i><a href="@Url.Action("PostJob", "Jobs")" class="button btn-jobalerts button--antiman button--inverted button--border-thin button--text-thick button--size-m cd-signin">Post Job</a></div>
            }
            else
            {
                @Html.Partial("LoginModal")
                <div class="col-lg-4 col-md-4"><i><img src="~/Content/images/04.png" alt="Job seekers"></i>@Html.ActionLink("PostJob", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "button btn-jobalerts button--antiman button--inverted button--border-thin button--text-thick button--size-m cd-signin" })</div>
            }
        </div>
    </div>
    <div class="container nav-tabs-main">
        <div class="col-xs-12 innerpages" id="about-us">
            <p>
                If you're not looking at outsourcing the full recruitment process, but would like YOU Global to promote your job vacancy via targeted mailouts and advertising, please register or sign in to access our job posting services.
            </p>
        </div>
    </div>
</section>