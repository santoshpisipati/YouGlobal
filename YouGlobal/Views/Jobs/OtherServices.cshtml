@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container">
    <div class="container-fluid">
        <div class="container nav-tabs-main">
            <div class="col-md-12 innerpages" id="about-us">
                <div class="col-md-6 row ">
                    <h2>Other Services</h2>
                    <p>YOU Global welcomes interest from suppliers of products and services who would like to operate under the YOU Global brand, capitalising on the substantial web traffic generated by the activity of recruitment.</p>
                    <ul class='list' id="otherservices">
                        <li>Candidate behavioural assessments.</li>
                        <li>Candidate psychometric testing.</li>
                        <li>Candidate skills testing.</li>
                        <li>Visa and migration services.</li>
                        <li>Relocation services.</li>
                        <li>General HR management, consultancy, and advice.</li>
                        <li>Labour hire.</li>
                        <li>Position descriptions - drafting, preparation, and/or review.</li>
                        <li>Candidate referencing & verification.</li>
                        <li>Citizenship by investment</li>
                        <li>Family Office Services</li>
                        <li>Real Estate Investment Funds</li>
                        <li>United Arab Emirates (UAE) Free Zone Company formation and virtual offices</li>
                        <li>Yacht registration</li>
                        <li>Banking & financial services</li>
                        <li>US & Canada company formation</li>
                        <li>European company formation</li>
                        <li>Australian & New Zealand company formation</li>
                        <li>RAK – Dubai offshore company formation - shelf & vintage companies</li>
                        <li>Company management services</li>
                        <li>United Arab Emirates (UAE) residency visas and processes</li>
                        <li>Wills & probate preparation</li>
                        <li>Worldwide offshore services</li>
                        <li>Business development services</li>
                    </ul>
                </div>
                <div class="col-md-6 row otherservicesp">
                    <p>Please complete details below, and expect to hear back from us soon.</p>
                    @using (Html.BeginForm("SubscribeOtherServices", "Jobs", FormMethod.Post, new { @class = "form-inline cont" }))
                    {
                        @Html.ValidationSummary(true)
                        <input type="hidden" name="SubmitSource" id="SubmitSource" value="otherservices" />
                        <form class="form-inline otherserform">
                            <div class="row">
                                <div class="form-group col-md-6 ">
                                    <label for="firstName">Your First Name</label>
                                    <input type="text" class="form-control" id="firstName" name="First name" placeholder="Enter your first name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="InputfamilyName">Your Family Name</label>
                                    <input type="text" class="form-control" id="InputfamilyName" name="Family name" placeholder="Enter your family name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 ">
                                    <label for="companyName">Your Business Name</label>
                                    <input type="text" class="form-control" id="companyName" name="Company name" placeholder="Enter your business name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="InputWebsite">Website</label>
                                    <input type="text" class="form-control" id="InputWebsite" pattern="www?\.[-a-zA-Z0-9_\+~#=]{2,256}\.[a-z]{2,4}\b([-a-zA-Z0-9_\+.~#?&//=]*)" name="Website" oninvalid="setCustomValidity('*please enter valid website address')"placeholder="Enter your website URL">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="natureofbusiness">Nature of business</label>
                                    <input type="text" class="form-control" id="natureofbusiness" name="Nature of business" placeholder="Enter your nature of business">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Country">Country</label>
                                    @Html.DropDownList("Country", new SelectList(((System.Data.DataTable)Session["Countries"]).Rows as System.Collections.IEnumerable, "[1]", "[1]"), new { @class = "form-control", placeholder = "please enter phone code" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="email">Email Address</label>
                                    <input type="email" class="form-control" id="email" name="Email" placeholder="Enter Email address">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="contactNo">Contact Telephone Number</label>
                                    <input type="tel" class="form-control" id="contactNo" name="Contact number" pattern="\b\d{3}[-.]?\d{3}[-.]?\d{4}\b" oninvalid="setCustomValidity('*please enter 10-digit number')" placeholder="Enter your telephone number">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="comment">Comment</label>
                                    @Html.TextArea("Comments", new { @maxlength = "1000", @class = "form-control", @rows = "5", @cols = "25", @onkeyup = "countCommentChar(this)", placeholder = "enter comments below" })
                                    @*<textarea rows="5" cols="25" class="form-control" onkeyup = "countJobContentChar(this)" maxlength="1000" name="comment" placeholder="enter comments below" id="comment"></textarea>*@
                                    <div style="color:white" id="Commentlen"></div>
                                    <p style="color:#fff;margin-top: 10px;">
                                        Note:- Please do not use this form for sending in details of a CV or applying for a position. For that purpose, click the "Job seekers" button above.
                                    </p>
                                </div>
                            </div>
                            <button type="submit" id="btnsubmit" value="Submit" class="btn btn-purple btn-lg btn-block">Submit</button>
                            <button type="reset" id="btnsubmit" value="Clear" class="btn btn-purple btn-lg btn-block">Clear</button>
                        </form>
                    }
                    
                    @*@using (Html.BeginForm("ResetOtherServices", "Jobs"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <button type="reset" id="btnsubmit" value="Submit" class="btn btn-purple btn-lg btn-block">Clear</button>
                    }*@
                </div>
            </div>

            <!-- Social Media Section -->
        </div>
        <!-- container End -->
    </div>
</section>