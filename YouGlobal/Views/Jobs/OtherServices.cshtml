@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container">
    <div class="container-fluid">
        <div class="container nav-tabs-main">
            <div class="col-md-12 innerpages" id="about-us">
                <div class="col-md-6 row ">
                    <h2>Other Services</h2>
                    <p>YOU Global welcomes interest from suppliers of products and services who would like to operate under the YOU Global brand, capitalising on the substantial web traffic generated by the activity of recruitment.</p>
                    <ul class='list'>
                        <li>Candidate behavioural assessments.</li>
                        <li>Candidate psychometric testing.</li>
                        <li>Candidate skills testing.</li>
                        <li>Visa and migration services.</li>
                        <li>Relocation services.</li>
                        <li>General HR management, consultancy, and advice.</li>
                        <li>Labour hire.</li>
                        <li>Position descriptions - drafting, preparation, and/or review.</li>
                        <li>Candidate referencing & verification.</li>
                    </ul>
                </div>
                <div class="col-md-6 row otherservicesp">
                    <p>Please complete details below, and expect to hear back from us soon.</p>
                    @using (Html.BeginForm("SubscribeOtherServices", "Jobs", FormMethod.Post, new { @class = "form-inline cont" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <form class="form-inline otherserform">
                            <div class="row">
                                <div class="form-group col-md-6 ">
                                    <label for="firstName">Your First Name</label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter your first name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="InputfamilyName">Your Family Name</label>
                                    <input type="text" class="form-control" id="InputfamilyName" name="familyName" placeholder="Enter your family name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 ">
                                    <label for="companyName">Your Business Name</label>
                                    <input type="text" class="form-control" id="companyName" name="companyName" placeholder="Enter your business name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="InputWebsite">Website</label>
                                    <input type="url" class="form-control" id="InputWebsite" name="website" placeholder="Enter your website URL">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="natureofbusiness">Nature of business</label>
                                    <input type="text" class="form-control" id="natureofbusiness" name="natureofbusiness" placeholder="Enter your nature of business">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="natureofbusiness">Country</label>
                                    @Html.DropDownList("Country", new SelectList(((System.Data.DataTable)Session["Countries"]).Rows as System.Collections.IEnumerable, "[0]", "[1]"), new { @class = "form-control", placeholder = "please enter phone code" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="email">Email Address</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email address">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="contactNo">Contact Telephone Number</label>
                                    <input type="tel" class="form-control" id="contactNo" name="contactNo" placeholder="Enter your telephone number">
                                </div>
                            </div>
                            <button type="submit" id="btnsubmit" value="Submit" class="btn btn-purple btn-lg btn-block">Submit</button>
                        </form>
                    }
                    @using (Html.BeginForm("ResetOtherServices", "Jobs"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <button type="submit" id="btnsubmit" value="Submit" class="btn btn-purple btn-lg btn-block">Clear</button>
                    }
                </div>
            </div>

            <!-- Social Media Section -->
        </div>
        <!-- container End -->
    </div>
</section>